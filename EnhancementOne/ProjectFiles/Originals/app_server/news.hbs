<!DOCTYPE html>
<!-- Website template by freewebsitetemplates.com -->
<html>
<head>
	<meta charset="UTF-8">
	<title>Travlr Getaways - News</title>
	<link rel="stylesheet" href="css/style.css" type="text/css">
</head>
<body>
	<div id="background">
		<div id="page">
			{{> header}}
			<div id="contents">
				<div class="box">
					<div>
						<div id="news" class="body">
							<div class="sidebar">
								<h3>Latest News</h3>
								<ul>
                                    {{#each latestNews}}
									<li>
										<a href="/latestNews/category/LatestNews">{{this.sub_category}}</a>
									</li>
								{{/each}}
								</ul>
								<h3>Vacation Tips</h3>
								<ul>
                                    {{#each latestNews}}
									<li>
										<a href="/latestNews/category/VacationTips">{{this.sub_category}}</a>
									</li>
									{{/each}}
								</ul>
							</div>
							<div>
								<h1> Big News</h1>
                                {{#each latestNews}}
								<img src="image/{{this.image}}" alt="Img">
								<h2>{{{this.name}}}</h2>
								<span {{this.time}}</span>
								{{{this.description}}}
                                {{/each}}
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		{{> footer}}
	</div>
</body>
</html>